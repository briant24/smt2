<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddFieldActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            app:layout_constraintTop_toBottomOf="@id/hargaJam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Input Lapangan Baru"
            style="@style/shadowText"
            android:textSize="30dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:padding="5dp"
            android:background="@drawable/border_img"
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv"
            app:layout_constraintBottom_toTopOf="@id/namaLap"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <EditText
            android:id="@+id/namaLap"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:paddingStart="12dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:hint="Nama Lapangan"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

        <EditText
            android:id="@+id/hargaJam"
            android:layout_marginTop="25dp"
            android:paddingStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:hint="Harga/Jam"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/namaLap"
            app:layout_constraintBottom_toTopOf="@id/textView4"/>


        <TextView
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hargaJam"
            app:layout_constraintBottom_toTopOf="@id/radioJenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:text="Pilih Jenis Lapangan"
            android:textColor="@color/grey"/>

        <RadioGroup
            app:layout_constraintTop_toBottomOf="@id/textView4"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/radioJenis"
            android:background="@drawable/border_img"
            android:textColor="@color/grey"
            android:layout_width="120dp"
            android:paddingStart="10dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioRumput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="Rumput"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioVinyl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="Vinyl" />

            <RadioButton
                android:id="@+id/radioKayu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="Kayu" />

        </RadioGroup>


        <Button
            android:id="@+id/button_browse"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/radioJenis"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button_upload"
            android:background="@drawable/custom_button_green"
            android:text="Cari Gambar" />
        <Button
            android:id="@+id/button_upload"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/radioJenis"
            app:layout_constraintLeft_toRightOf="@id/button_browse"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/custom_button_green"
            android:text="Simpan" />

        <Button
            android:id="@+id/button_kembali"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_upload"
            android:text="Kembali" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>