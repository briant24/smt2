<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:background="@drawable/bg_gradient"
    android:elevation="50dp"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearlist"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:focusable="true"
        android:layout_height="200dp"
        android:background="@drawable/bg_gradient">
        <ImageView
            android:layout_width="wrap_content"
            android:backgroundTint="@color/blue_lg"
            android:layout_height="150dp"
            android:background="@color/blue_bwh"
            android:scaleType="centerCrop"
            android:id="@+id/ImageList" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namaList"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:text="Nama Lapangan"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hargaList"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:text="Harga Lapangan"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jenisList"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:text="Jenis Lapangan"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>